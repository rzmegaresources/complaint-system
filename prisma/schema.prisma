// ============================================================
// FYP Complaint System - Database Schema
// AI-Powered Complaint Management with RAG Support
// ============================================================

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  extensions = [vector]
}

// ============================================================
// ENUMS
// ============================================================

enum Role {
  ADMIN
  USER
  STAFF
  HR
}

enum Status {
  OPEN
  IN_PROGRESS
  RESOLVED
  REJECTED
}

enum Priority {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

// ============================================================
// MODELS
// ============================================================

model User {
  id        Int       @id @default(autoincrement())
  loginId   String    @unique           // Alphanumeric login ID (e.g. JD01, HR01, AD01)
  password  String    @default("123456") // Plain text for demo purposes
  email     String    @unique
  name      String
  role      Role      @default(USER)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  // Relations
  tickets   Ticket[]
  messages  Message[]

  @@map("users")
}

model Ticket {
  id          Int       @id @default(autoincrement())
  title       String
  description String    @db.Text
  status      Status    @default(OPEN)
  priority    Priority  @default(MEDIUM)
  category    String?
  location    String?
  imageUrl    String?   // Path to uploaded complaint image
  latitude    Float?    // Map pin latitude
  longitude   Float?    // Map pin longitude
  aiAnalysis  Json?     // Stores AI-generated tags, sentiment, category suggestions
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  userId      Int
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages    Message[]

  @@index([userId])
  @@index([status])
  @@index([priority])
  @@index([createdAt])
  @@map("tickets")
}

model Message {
  id        Int      @id @default(autoincrement())
  content   String   @db.Text
  createdAt DateTime @default(now())

  // Relations
  ticketId  Int
  ticket    Ticket   @relation(fields: [ticketId], references: [id], onDelete: Cascade)

  senderId  Int
  sender    User     @relation(fields: [senderId], references: [id], onDelete: Cascade)

  @@index([ticketId])
  @@index([senderId])
  @@map("messages")
}

model Document {
  id        Int      @id @default(autoincrement())
  content   String   @db.Text
  metadata  Json     // Stores source file name, page number, chunk index
  embedding Unsupported("vector(768)") // Gemini embedding dimension
  createdAt DateTime @default(now())

  @@map("documents")
}
